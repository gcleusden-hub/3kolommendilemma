<script>

function verzamelTekst(){
return `
Drie-Kolommenmodel - Dilemma Analyse

DILEMMA:
${localStorage.getItem("dilemma") || ""}

BETROKKENEN:
${localStorage.getItem("betrokkenen") || ""}

ARGUMENTEN VOOR:
${localStorage.getItem("voor") || ""}

ARGUMENTEN TEGEN:
${localStorage.getItem("tegen") || ""}

MIJN KEUZE:
${localStorage.getItem("keuze") || ""}
`;
}

function deelViaEmail(){
const tekst = encodeURIComponent(verzamelTekst());
window.location.href = `mailto:?subject=Dilemma Analyse&body=${tekst}`;
}

function deelViaWhatsApp(){
const tekst = encodeURIComponent(verzamelTekst());
window.open(`https://wa.me/?text=${tekst}`,'_blank');
}

const velden = ["dilemma","betrokkenen","voor","tegen","keuze"];

velden.forEach(id=>{
    const veld = document.getElementById(id);
    veld.value = localStorage.getItem(id) || "";
    veld.addEventListener("input",()=>{
        localStorage.setItem(id, veld.value);
    });
});

</script>

